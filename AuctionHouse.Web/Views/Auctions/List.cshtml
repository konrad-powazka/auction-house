<div tasty-table bind-resource-callback="$ctrl.getResource" bind-init="$ctrl.tastyInitCfg" bind-reload="$ctrl.reload">
	<table class="table table-striped table-condensed table-hover">
		<thead tasty-thead></thead>
		<tbody>
		<tr ng-repeat="auction in rows" class="clickable" ui-sref="displayAuction({ auctionId: auction.id })">
			<td class="text-cell" ng-if="$ctrl.checkIfColumnIsDisplayed('TitleAndDescription')">
				{{ auction.title }} <span class="text-dimmed">{{ auction.description }}</span>
			</td>
			<td class="text-right" ng-if="$ctrl.checkIfColumnIsDisplayed('CurrentPrice')">
				<span ng-if="auction.currentPrice">{{ auction.currentPrice | currency }}</span>
			</td>
			<td class="text-right" ng-if="$ctrl.checkIfColumnIsDisplayed('SoldFor')">
				<span ng-if="auction.currentPrice">{{ auction.currentPrice | currency }}</span>
			</td>
			<td class="text-right" ng-if="$ctrl.checkIfColumnIsDisplayed('BuyNowPrice')">
				{{ auction.buyNowPrice | currency }}
			</td>
			<td class="text-right" ng-if="$ctrl.checkIfColumnIsDisplayed('NumberOfBids')">
				<span ng-if="auction.numberOfBids > 0">{{ auction.numberOfBids }}</span>
			</td>
			<td class="text-cell" ng-if="$ctrl.checkIfColumnIsDisplayed('Seller')">
				{{ auction.createdByUserName }}
			</td>
			<td class="text-cell" ng-if="$ctrl.checkIfColumnIsDisplayed('Winner')">
				{{ auction.highestBidderUserName }}
			</td>
			<td ng-if="$ctrl.checkIfColumnIsDisplayed('StartedDateTime')">
				{{ auction.createdDateTime | formatDateTime }}
			</td>
			<td ng-if="$ctrl.checkIfColumnIsDisplayed('EndsDateTime')">
				{{ auction.endDate | formatToNowDateTime }}
			</td>
			<td ng-if="$ctrl.checkIfColumnIsDisplayed('EndedDateTime')">
				{{ auction.finishedDateTime | formatDateTime }}
			</td>
		</tr>
		<tr ng-if="rows.length === 0">
			<td colspan="{{ $ctrl.staticResource.header.length }}" class="side-note text-center">No auctions</td>
		</tr>
		</tbody>
	</table>
	<div tasty-pagination list-items-per-page="[10, 25, 50, 100]"></div>
</div>