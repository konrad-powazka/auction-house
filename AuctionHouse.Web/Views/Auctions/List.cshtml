<div class="page-header">
	<h3>Auctions in progress</h3>
</div>
<div tasty-table bind-resource-callback="$ctrl.getResource" bind-init="$ctrl.tastyInitCfg" bind-resource="$ctrl.staticResource">
	<table class="table table-striped table-condensed">
		<thead tasty-thead></thead>
		<tbody>
		<tr ng-repeat="auction in rows">
			<td class="text-cell">
				<a ui-sref="displayAuction({ auctionId: auction.id })">
					{{ auction.title }}
				</a>
			</td>
			<td class="text-right">	
				{{ auction.minimalPriceForNextBidder | currency }}
			</td>
			<td class="text-right">
				{{ auction.buyNowPrice | currency }}
			</td>
			<td class="text-right">
				<span ng-if="auction.numberOfBids > 0">{{ auction.numberOfBids }}</span>
			</td>
			<td class="text-cell">{{ auction.description }}</td>
		</tr>
		</tbody>
	</table>
	<div tasty-pagination list-items-per-page="[10, 25, 50, 100]"></div>
</div>