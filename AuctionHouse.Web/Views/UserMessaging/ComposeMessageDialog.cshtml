<div class="modal-header">
	<span class="modal-title"><span class="fa fa-envelope"></span> Compose message to {{ $ctrl.model.recipientUserName }}</span>
</div>
<form ng-submit="$ctrl.sendMessage()" name="$ctrl.form" novalidate>
	<div class="modal-body" id="modal-body">
		<formly-form model="$ctrl.model" fields="$ctrl.fields" form="$ctrl.form"></formly-form>
	</div>
	<div class="modal-footer">
		<button type="submit" class="btn btn-primary submit-button">
			Send
		</button>
		<button type="button" class="btn btn-default" ng-click="$ctrl.cancel()">Cancel</button>
	</div>
</form>