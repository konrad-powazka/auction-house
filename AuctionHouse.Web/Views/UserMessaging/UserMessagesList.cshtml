<div tasty-table bind-resource-callback="$ctrl.getResource" bind-init="$ctrl.tastyInitCfg">
	<table class="table table-striped table-condensed table-hover">
		<thead tasty-thead></thead>
		<tbody>
		<tr ng-repeat="message in rows" class="clickable" ng-click="$ctrl.displayUserMessage(message)">
			<td class="text-cell" ng-if="$ctrl.checkIfColumnIsDisplayed('SenderUserName')">
				{{ message.senderUserName }}
			</td>
			<td class="text-cell" ng-if="$ctrl.checkIfColumnIsDisplayed('RecipientUserName')">
				{{ message.recipientUserName }}
			</td>
			<td class="text-cell"  ng-if="$ctrl.checkIfColumnIsDisplayed('SubjectAndBody')">
				{{ message.subject }} <span class="text-dimmed">{{ message.body }}</span>
			</td>
			<td ng-if="$ctrl.checkIfColumnIsDisplayed('SentDateTime')">
				{{ message.sentDateTime | formatDateTime }}
			</td>
		</tr>
		<tr ng-if="rows.length === 0">
			<td colspan="{{ $ctrl.displayedColumns.length }}" class="side-note text-center">No messages</td>
		</tr>
		</tbody>
	</table>
	<div tasty-pagination list-items-per-page="[10, 25, 50, 100]"></div>
</div>