<div class="page-header">
	<h3>Messaging</h3>
</div>
<uib-tabset>
	<uib-tab>
		<uib-tab-heading>
			<span class="fa fa-arrow-circle-o-down fa-lg"></span> Inbox
		</uib-tab-heading>
		<div tasty-table bind-resource-callback="$ctrl.getResource" bind-init="$ctrl.tastyInitCfg" bind-resource="$ctrl.staticResource">
			<table class="table table-striped table-condensed">
				<thead tasty-thead></thead>
				<tbody>
				<tr ng-repeat="message in rows">
					<td class="text-cell">{{ message.senderUserName }}</td>
					<td class="text-cell">
						{{ message.subject }} <span class="text-dimmed">{{ message.body }}</span>
					</td>
					<td>{{ message.sentDateTime | formatDateTime }}</td>
				</tr>
				<tr ng-if="rows.length === 0">
					<td colspan="{{ $ctrl.staticResource.header.length }}" class="side-note text-center">Your inbox is empty</td>
				</tr>
				</tbody>
			</table>
			<div tasty-pagination list-items-per-page="[10, 25, 50, 100]"></div>
		</div>
	</uib-tab>
	<uib-tab>
		<uib-tab-heading>
			<span class="fa fa-arrow-circle-o-up fa-lg"></span> Sent
		</uib-tab-heading>
		<div tasty-table bind-resource-callback="$ctrl.getResource" bind-init="$ctrl.tastyInitCfg" bind-resource="$ctrl.staticResource">
			<table class="table table-striped table-condensed">
				<thead tasty-thead></thead>
				<tbody>
					<tr ng-repeat="message in rows">
						<td class="text-cell">{{ message.subject }}</td>
						<td class="text-cell">{{ message.body }}</td>
					</tr>
				</tbody>
			</table>
			<div tasty-pagination list-items-per-page="[10, 25, 50, 100]"></div>
		</div>
	</uib-tab>
</uib-tabset>
