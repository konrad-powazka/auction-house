<div class="modal-header">
    <span class="modal-title"><span class="fa fa-sign-in"></span> Sign in</span>
</div>
<form ng-submit="$ctrl.login()" name="$ctrl.form" novalidate>
    <div class="modal-body" id="modal-body">
        <div class="alert alert-info">
            This is just a demo app and therefore registration process is not included.
            Logging in using any user name and password combination will work.
        </div>
        <formly-form model="$ctrl.model" fields="$ctrl.fields" form="$ctrl.form"></formly-form>
    </div>
    <div class="modal-footer">
	    <button type="submit" class="btn btn-primary submit-button">
		    Sign in
	    </button>
        <button type="button" class="btn btn-default" ng-click="$ctrl.cancel()">Cancel</button>
    </div>
</form>